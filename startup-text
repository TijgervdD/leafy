[Unit]
Description=Leafy Beast Backup Service
After=network.target

[Service]
# Run the service as your specific user, not root
User=grp2
Group=grp2

# The working directory where your script lives
WorkingDirectory=/home/grp2/leafy/

# The Command: Path to your virtual env python + Path to your script
ExecStart=/home/grp2/codeEnv/env/bin/python /home/grp2/leafy/finalBeastBackup.py

# Restart the script automatically if it crashes
Restart=on-failure
RestartSec=5

# Logging (Output will go to the system journal)
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target